<!DOCTYPE html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Content Management</title>
        <!-- CSS -->
        <link
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
            crossorigin="anonymous"
        />
        <link href="<%= url %>assets/style.css" rel="stylesheet" />
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"
            rel="stylesheet"
        />
        <link
            href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css"
            rel="stylesheet"
        />
        <link
            rel="icon"
            type="image/x-icon"
            href="<%= url %>assets/img/icon.png"
        />
        <link href="<%= url %>assets/dropify/dropify.css" rel="stylesheet" />
        <!-- JS -->
        <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"
        ></script>
        <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
        <script
            src="<%= url %>assets/dropify/dropify.js"
            type="text/javascript"
        ></script>
        <script>
            $(window).on("load", function () {
                $("#loading").hide();
            });
        </script>
    </head>
    <body>
        <div id="loading">
            <img
                id="loading-image"
                src="<%= url %>assets/img/icon.png"
                alt="Loading..."
                width="192px"
            />
        </div>

        <%- include('partial/navbar.ejs') %>

        <section class="mt-4 pb-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="float-left">
                            <a
                                type="button"
                                class="btn btn-primary text-light"
                                data-toggle="modal"
                                data-target="#add"
                                >Add new</a
                            >
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="table-responsive pt-4">
                            <table class="table table-hover" id="example">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Url</th>
                                        <th scope="col">Stack</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% project.forEach(function(data) { %>
                                    <tr>
                                        <td><%= data.project_name %></td>
                                        <td>
                                            <a
                                                href="<%= data.project_url %>"
                                                target="_blank"
                                                ><%= data.project_url %></a
                                            >
                                        </td>
                                        <td><%= data.project_stack %></td>
                                        <td>
                                            <a
                                                type="button"
                                                class="badge badge-primary text-light"
                                                data-toggle="modal"
                                                data-target="#thumbnail<%= data.project_id %>"
                                            >
                                                Image
                                            </a>
                                            <a
                                                type="button"
                                                class="badge badge-primary text-light"
                                                data-toggle="modal"
                                                data-target="#edit<%= data.project_id %>"
                                            >
                                                Edit
                                            </a>
                                            <a
                                                href="<%= url %>app/project/<%= data.project_slug %>"
                                                class="badge badge-primary text-light"
                                            >
                                                Gallery
                                            </a>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <form action="<%= url %>app/project/save" method="POST">
            <div
                class="modal fade"
                id="add"
                tabindex="-1"
                role="dialog"
                aria-labelledby="thumb"
                aria-hidden="true"
            >
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="thumb">Add Project</h5>
                            <button
                                type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close"
                            >
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <label for="">Name</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            value=""
                                            name="name"
                                            placeholder="Type new name project"
                                            required
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Desc</label>
                                        <textarea
                                            name="desc"
                                            id="desc"
                                            cols="30"
                                            rows="10"
                                            class="form-control"
                                            required
                                        ></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="">URL</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            value=""
                                            name="url"
                                            placeholder="Type new url project"
                                            required
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Username</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            name="username"
                                            placeholder="Type new username project"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Password</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            name="password"
                                            placeholder="Type new password project"
                                        />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <label for="">Stack</label>
                                    <div
                                        style="
                                            overflow-y: scroll;
                                            height: 200px;
                                            margin-bottom: 30px;
                                        "
                                    >
                                        <% stack.forEach(function(data) { %>
                                        <div class="form-check">
                                            <input
                                                class="form-check-input"
                                                name="stack[]"
                                                type="checkbox"
                                                value="<%= data.stack_name %>"
                                                id="<%= data.stack_id %>"
                                            />
                                            <label
                                                class="form-check-label"
                                                for="<%= data.stack_id %>"
                                            >
                                                <%= data.stack_name %>
                                            </label>
                                        </div>
                                        <% }); %>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input
                                            name="status"
                                            class="form-check-input"
                                            type="radio"
                                            name="inlineRadioOptions"
                                            id="inlineRadio1"
                                            value="0"
                                            checked
                                        />
                                        <label
                                            class="form-check-label"
                                            for="inlineRadio1"
                                            >Full Link</label
                                        >
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input
                                            name="status"
                                            class="form-check-input"
                                            type="radio"
                                            name="inlineRadioOptions"
                                            id="inlineRadio2"
                                            value="1"
                                        />
                                        <label
                                            class="form-check-label"
                                            for="inlineRadio2"
                                            >From 000webhostapp</label
                                        >
                                    </div>
                                    <hr />
                                    <div class="form-check form-check-inline">
                                        <input
                                            name="typeproject"
                                            class="form-check-input"
                                            type="radio"
                                            name="inlineRadioOptionsType"
                                            id="inlineRadio11"
                                            value="0"
                                            checked
                                        />
                                        <label
                                            class="form-check-label"
                                            for="inlineRadio11"
                                            >Page Web</label
                                        >
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input
                                            name="typeproject"
                                            class="form-check-input"
                                            type="radio"
                                            name="inlineRadioOptionsType"
                                            id="inlineRadio22"
                                            value="1"
                                        />
                                        <label
                                            class="form-check-label"
                                            for="inlineRadio22"
                                            >Page Mobile</label
                                        >
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button
                                type="button"
                                class="btn btn-secondary"
                                data-dismiss="modal"
                            >
                                Close
                            </button>
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <% project.forEach(function(data) { %>
        <form action="<%= url %>app/project/update" method="POST">
            <div
                class="modal fade"
                id="edit<%= data.project_id %>"
                tabindex="-1"
                role="dialog"
                aria-labelledby="thumb"
                aria-hidden="true"
            >
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5
                                class="modal-title"
                                id="thumb<%= data.project_id %>"
                            >
                                Edit Project
                            </h5>
                            <button
                                type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close"
                            >
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="input-group">
                                <input
                                    type="hidden"
                                    name="id"
                                    value="<%= data.project_id %>"
                                />
                            </div>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <label for="">Name</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            value="<%= data.project_name %>"
                                            name="name"
                                            placeholder="Type new name project"
                                            required
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Desc</label>
                                        <textarea
                                            name="desc"
                                            id="desc"
                                            cols="30"
                                            rows="10"
                                            class="form-control"
                                            required
                                        >
<%= data.project_desc %></textarea
                                        >
                                    </div>
                                    <div class="form-group">
                                        <label for="">URL</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            value="<%= data.project_url %>"
                                            name="url"
                                            placeholder="Type new url project"
                                            required
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Username</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            value="<%= data.project_username %>"
                                            name="username"
                                            placeholder="Type new username project"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Password</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            value="<%= data.project_password %>"
                                            name="password"
                                            placeholder="Type new password project"
                                        />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <label for="">Stack</label>
                                    <div
                                        style="
                                            overflow-y: scroll;
                                            height: 200px;
                                            margin-bottom: 30px;
                                        "
                                    >
                                        <% stack.forEach(function(datatwo) { %>
                                        <div class="form-check">
                                            <input class="form-check-input" <%if
                                            (data.project_stack)
                                            {if(data.project_stack.split(",").includes(datatwo.stack_name))
                                            { %> checked <% }} %> name="stack[]"
                                            type="checkbox" value="<%=
                                            datatwo.stack_name %>" id="<%=
                                            datatwo.stack_id %>">
                                            <label
                                                class="form-check-label"
                                                for="<%= datatwo.stack_id %>"
                                            >
                                                <%= datatwo.stack_name %>
                                            </label>
                                        </div>
                                        <% }); %>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input name="status"
                                        class="form-check-input" type="radio"
                                        name="inlineRadioOptions"
                                        id="inlineRadio1" value="0" <%if
                                        (data.project_link == 0) { %> checked <%
                                        } %> />
                                        <label
                                            class="form-check-label"
                                            for="inlineRadio1"
                                            >Full Link</label
                                        >
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input name="status"
                                        class="form-check-input" type="radio"
                                        name="inlineRadioOptions"
                                        id="inlineRadio2" value="1" <%if
                                        (data.project_link == 1) { %> checked <%
                                        } %> />
                                        <label
                                            class="form-check-label"
                                            for="inlineRadio2"
                                            >From 000webhostapp</label
                                        >
                                    </div>
                                    <hr />
                                    <div class="form-check form-check-inline">
                                        <input name="typeproject"
                                        class="form-check-input" type="radio"
                                        name="inlineRadioOptionsType"
                                        id="inlineRadio11" value="0" <%if
                                        (data.project_type == 0) { %> checked <%
                                        } %> />
                                        <label
                                            class="form-check-label"
                                            for="inlineRadio11"
                                            >Page Web</label
                                        >
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input name="typeproject"
                                        class="form-check-input" type="radio"
                                        name="inlineRadioOptionsType"
                                        id="inlineRadio22" value="1" <%if
                                        (data.project_type == 1) { %> checked <%
                                        } %> />
                                        <label
                                            class="form-check-label"
                                            for="inlineRadio22"
                                            >Page Mobile</label
                                        >
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button
                                type="button"
                                class="btn btn-secondary"
                                data-dismiss="modal"
                            >
                                Close
                            </button>
                            <button type="submit" class="btn btn-primary">
                                Save changes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <form
            action="<%= url %>app/project/upload-thumb"
            method="POST"
            enctype="multipart/form-data"
        >
            <div
                class="modal fade"
                id="thumbnail<%= data.project_id %>"
                tabindex="-1"
                role="dialog"
                aria-labelledby="thumbnail"
                aria-hidden="true"
            >
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5
                                class="modal-title"
                                id="thumbnail<%= data.project_id %>"
                            >
                                Thumbnail Image
                            </h5>
                            <button
                                type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close"
                            >
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <h6 class="text-center">
                                <%= data.project_name %>
                            </h6>
                            <hr />
                            <div class="input-group">
                                <input
                                    type="hidden"
                                    name="id"
                                    value="<%= data.project_id %>"
                                />
                                <input
                                    type="file"
                                    name="image"
                                    id="dropify"
                                    class="dropify"
                                    data-allowed-file-extensions="png jpg webp"
                                    data-default-file="<%= url %>uploads/project/<%= data.project_image %>"
                                />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button
                                type="button"
                                class="btn btn-secondary"
                                data-dismiss="modal"
                            >
                                Close
                            </button>
                            <button type="submit" class="btn btn-primary">
                                Save changes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <% }); %>
        <script>
            $(document).ready(function () {
                $("#example").DataTable({
                    order: [[0, "desc"]],
                });
            });
            $(".dropify").dropify({
                messages: {
                    default: "Upload Thumbnail",
                    replace: "Drag and drop or click to replace",
                    remove: "Remove",
                    error: "Ooops, something wrong happended.",
                },
            });
        </script>
    </body>
</html>
